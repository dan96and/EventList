<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="danieland.eventlist">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.danieland.eventlist.objects.EventApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        tools:replace="android:icon">
        <activity
            android:name="com.danieland.eventlist.view.activities.SplashScreenView"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.danieland.eventlist.view.activities.EditEventView"
            android:exported="false" />
        <activity
            android:name="com.danieland.eventlist.view.activities.InformationView"
            android:exported="true" />
        <activity
            android:name="com.danieland.eventlist.view.activities.NewEventView"
            android:exported="true" />
        <activity
            android:name="com.danieland.eventlist.view.activities.HomeView"
            android:exported="true" />
    </application>

</manifest>